<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AlertDialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:windowAnimationStyle">@style/AlertDialogAnimation</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="AlertDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_out</item>
    </style>

    <style name="FullscreenDialog" parent="android:Theme.Black.NoTitleBar.Fullscreen">
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>
</resources>