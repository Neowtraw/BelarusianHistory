<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Состояние нажатия -->
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/corner_icon_radius" />
            <solid android:color="@color/bg_btn_checked" />
        </shape>
    </item>

    <!-- Состояние отжатия, но выбрано -->
    <item android:state_selected="true">
        <shape>
            <corners android:radius="@dimen/corner_icon_radius" />
            <solid android:color="@color/bg_btn_checked" />
        </shape>
    </item>

    <!-- Состояние по умолчанию -->
    <item>
        <shape>
            <corners android:radius="@dimen/corner_icon_radius" />
            <solid android:color="@color/bg_second" />
        </shape>
    </item>
</selector>