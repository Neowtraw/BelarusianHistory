<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/labelInfo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/main_padding"
    android:background="@drawable/item_background_transparent_bg"
    android:orientation="vertical"
    android:padding="@dimen/main_padding">

    <FrameLayout
        android:id="@+id/flImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/addImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_divider">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/imgInfoEmpty"
                android:layout_width="250dp"
                android:layout_height="120dp"
                android:background="@drawable/item_background_dotted_rounded"
                android:maxLines="5"
                android:src="@drawable/ic_launcher_icon" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/plus"
                app:tint="@color/contrast" />
        </FrameLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image"
            android:layout_width="250dp"
            android:layout_height="120dp"
            android:layout_marginBottom="@dimen/main_divider"
            android:background="@drawable/round_outline"
            android:clipToOutline="true"
            android:scaleType="centerCrop" />

    </FrameLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/errorTitle"
        android:text="@string/error_empty_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/add_text"
        android:visibility="gone"
        android:textColor="@color/contrast"
        android:gravity="start"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/main_divider"
        android:layout_weight="1"
        android:background="@drawable/item_rounded_bg"
        android:gravity="center"
        android:maxLines="1"
        android:maxLength="30"
        android:ellipsize="end"
        android:padding="@dimen/main_divider"
        android:textColor="@color/main_color"
        android:textSize="@dimen/main_text" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/errorDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/add_text"
        android:visibility="gone"
        android:text="@string/error_empty_field"
        android:textColor="@color/contrast"
        android:gravity="start"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/main_divider"
        android:layout_weight="1"
        android:background="@drawable/item_rounded_bg"
        android:gravity="center"
        android:maxLines="4"
        android:padding="@dimen/main_divider"
        android:textColor="@color/main_color"
        android:textSize="@dimen/add_text" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <FrameLayout
            android:id="@+id/flAnimation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/item_background_dotted_rounded"
            android:textAllCaps="false"
            android:textColor="@color/main_color"
            android:textSize="@dimen/add_text">

            <FrameLayout
                android:id="@+id/addAnimation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/main_padding">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/plus"
                    app:tint="@color/contrast" />

            </FrameLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/animation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_outline"
                android:clipToOutline="true"
                android:scaleType="centerCrop" />

        </FrameLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnAccept"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end|center"
            android:layout_margin="@dimen/main_divider"
            android:background="@drawable/item_rounded_contrast"
            android:clickable="true"
            android:elevation="3dp"
            android:padding="@dimen/main_divider"
            android:src="@drawable/checkmark" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>

