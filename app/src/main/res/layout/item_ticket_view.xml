<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_rounded_bg"
    android:padding="16dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTicket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="@dimen/main_text"/>

        <ImageView
            android:id="@+id/ivPassed"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitCenter"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/flTicket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:paddingTop="16dp"
                android:textSize="@dimen/add_text"/>

            <Button
                android:id="@+id/btnGoTo"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:textColor="@color/text_color"
                android:textSize="@dimen/main_text"
                android:textAllCaps="false"
                android:text="@string/go_to"
                android:layout_gravity="center"
                android:background="@drawable/item_outline_rounded"/>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>