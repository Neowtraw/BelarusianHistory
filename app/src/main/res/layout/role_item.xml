<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_rounded_contrast"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvRole"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="fefe"
        android:textSize="@dimen/main_text"
        android:textColor="@color/text_color"
        android:gravity="center"
        android:padding="@dimen/main_padding" />


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/item_rounded_passed"
        app:cardCornerRadius="27dp">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/imgRole"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_icon" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/top_layer_img_gradient" />

    </androidx.cardview.widget.CardView>


</LinearLayout>